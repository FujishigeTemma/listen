{
  "name": "@listen/admin",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:server": "tsx watch server/src/index.ts",
    "dev:client": "vite --config client/vite.config.ts",
    "build": "pnpm run build:server && pnpm run build:client",
    "build:server": "tsup server/src/index.ts --format esm --dts",
    "build:client": "vite build --config client/vite.config.ts",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "tsgo -p client --noEmit",
    "typecheck:server": "tsgo -p server --noEmit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.978.0",
    "@hono/node-server": "^1.19.9",
    "@hono/valibot-validator": "catalog:",
    "@listen/db": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "@tanstack/react-router": "catalog:",
    "chokidar": "^5.0.0",
    "cloudflare": "^5.2.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "catalog:",
    "execa": "^9.6.1",
    "hono": "catalog:",
    "lucide-react": "catalog:",
    "p-queue": "^9.1.0",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "^3.4.0",
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/devtools-vite": "^0.4.1",
    "@tanstack/router-plugin": "^1.157.16",
    "@types/node": "^25.1.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "tailwindcss": "catalog:",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "vite": "catalog:"
  }
}
